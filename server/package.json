{
  "name": "calc-center-server",
  "version": "1.0.0",
  "description": "计算中心 JSON 配置生成工具 - 后端服务",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "node index.js",
    "build:macos": "pkg index.js --target node18-macos-x64 --output ../dist/macos/calc-center",
    "build:windows": "pkg index.js --target node18-win-x64 --output ../dist/windows/calc-center.exe",
    "build:all": "npm run build:macos && npm run build:windows"
  },
  "pkg": {
    "scripts": "index.js",
    "assets": [],
    "targets": [
      "node18-macos-x64",
      "node18-win-x64"
    ],
    "outputPath": "../dist"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5"
  }
}
